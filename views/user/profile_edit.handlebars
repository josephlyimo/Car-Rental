    }
    #imagePreview {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #e8eaed;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      margin: 0 auto;
      display: block;
    }
 
    button:hover {
      background-color: #1669c1;
    }
    .current-image {
      margin-top: 2rem;
    }
    .current-image h3 {
      color: #202124;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }
    .current-image img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #e8eaed;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      display: block;
      margin: 0 auto;
    }
  </style>
</head>
