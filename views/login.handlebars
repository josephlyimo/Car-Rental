<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Car Rental System</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/login.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="login-container">
    <div class="login-left-panel">
      <h2>Hello!</h2>
      <p>Don't have an account?</p>
      <a href="/users/register" class="btn btn-outline">Register</a>
    </div>
    <div class="login-right-panel">
      <h2>Login</h2>
      <p>Enter your credentials to continue</p>
      {{#if error}}
        <div class="error-message">{{error}}</div>
      {{/if}}
      {{#if successMessage}}
        <div class="success-message">{{successMessage}}</div>
      {{/if}}
      <form action="/users/login" method="POST" class="login-form">
        <div class="form-group">
          <input type="text" id="email" name="email" placeholder="Email" required />
        </div>
        <div class="form-group password-group">
          <input type="password" id="password" name="password" placeholder="Password" required />
          <span class="toggle-password" onclick="togglePasswordVisibility()">&#128065;</span>
        </div>
        <a href="/users/forgot-password" class="forgot-password">Forgot Password?</a>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <!--<p class="social-login-text">or login with</p>-->
      <!--<div class="social-login-icons">
        <a href="/auth/google" class="social-icon google" title="Login with Google">G</a>
        <a href="/auth/facebook" class="social-icon facebook" title="Login with Facebook">f</a>
        <a href="/auth/github" class="social-icon github" title="Login with GitHub">&#x1F5C3;</a>
        <a href="/auth/linkedin" class="social-icon linkedin" title="Login with LinkedIn">in</a>
      </div>-->
    </div>
  </div>

  <script>
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById('password');
      const type = passwordInput.getAttribute('type');
      passwordInput.setAttribute('type', type === 'password' ? 'text' : 'password');
    }
  </script>
</body>
</html>
