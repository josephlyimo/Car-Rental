<div class="admin-register-container">
  <div class="admin-register-header">
    <h2>Admin User Management</h2>
    <p>Welcome, {{user.name}}</p>
  </div>

  <h3>Add New Admin</h3>
  <form action="/admin/users/new" method="POST" class="admin-register-form">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required class="admin-input" />
    </div>

    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required class="admin-input" />
    </div>

    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required class="admin-input" />
    </div>

    <button type="submit" class="admin-register-btn">Add Admin</button>
  </form>

  <h3>Existing Admins</h3>
  <table class="admin-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      {{#each admins}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

