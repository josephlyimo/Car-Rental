st<h2>Admin Product Management</h2>

<p>Welcome, {{user.name}}</p>

<a href="/admin/products/new">Add New Product</a>

<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Type</th>
      <th>Color</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each cars}}
    <tr>
      <td>
        {{#if this.images.length}}
          <img src="{{this.images.[0]}}" alt="{{this.name}}" width="100" />
        {{else}}
          No Image
        {{/if}}
      </td>
      <td>{{this.name}}</td>
      <td>{{this.type}}</td>
      <td>{{this.color}}</td>
      <td>{{this.status}}</td>
      <td>
        <a href="/admin/products/edit/{{this.id}}">Edit</a> |
        <form action="/admin/products/delete/{{this.id}}" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
